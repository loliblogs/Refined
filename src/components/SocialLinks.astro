---
interface SocialLink {
  icon: string;
  url: string;
  title?: string;
}

interface Props {
  links: SocialLink[];
}

const { links } = Astro.props;
---

{links.length > 0 && (
  <div class="mt-5">
    <div class="flex items-center justify-center">
      {links.map(link => (
        <a
          class="
            mx-2 inline-block text-muted transition-colors duration-200
            hover:text-primary
            forced-colors:transition-none
            forced-colors:hover:text-[Highlight]
          "
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          title={link.title}
          aria-label={link.title ?? link.url}
        >
          <div class="size-10" set:html={link.icon} />
        </a>
      ))}
    </div>
  </div>
)}
